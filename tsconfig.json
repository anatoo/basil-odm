{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false,
    "noEmit": false,
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
