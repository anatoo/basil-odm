{
  "name": "basil-odm",
  "version": "0.0.0",
  "license": "MIT",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "bin": {
    "basil": "bin/cli.js"
  },
  "devDependencies": {
    "@types/jest": "29.5.7",
    "@types/pluralize": "0.0.32",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@typescript-eslint/parser": "6.9.1",
    "esbuild": "0.19.5",
    "esbuild-jest": "0.5.0",
    "eslint": "8.52.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "lint-staged": "15.0.2",
    "merge": "2.1.1",
    "mongodb": "6.2.0",
    "mongodb-memory-server": "8.16.0",
    "typedoc": "^0.25.0",
    "typedoc-plugin-markdown": "^3.15.4",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "commander": "11.1.0",
    "find-config": "1.0.0",
    "jsonschema": "1.4.1",
    "pluralize": "8.0.0",
    "prettier": "2.8.8",
    "tiny-invariant": "1.3.1"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "yarn run lint:fix"
    ]
  },
  "scripts": {
    "test": "jest",
    "prepare-test": "npx tsx ./e2e/*/generate.ts",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit --project tsconfig.typecheck.json",
    "clean": "rm -rf build dist",
    "prepare": "husky install",
    "publish-yalc": "npm run clean && npm run build && yalc publish --push --private",
    "gen-typedoc": "npx typedoc src --out docs/api --readme none --basePath . --plugin typedoc-plugin-markdown"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "printWidth": 180
  },
  "peerDependencies": {
    "mongodb": "*"
  }
}
