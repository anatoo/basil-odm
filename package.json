{
  "name": "basil-odm",
  "version": "0.0.0",
  "license": "MIT",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "bin": {
    "basil": "bin/cli.js"
  },
  "devDependencies": {
    "@types/jest": "29.5.10",
    "@types/pluralize": "0.0.33",
    "@typescript-eslint/eslint-plugin": "6.13.1",
    "@typescript-eslint/parser": "6.13.1",
    "esbuild": "0.19.8",
    "eslint": "8.54.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "lint-staged": "15.1.0",
    "merge": "2.1.1",
    "mongodb": "6.3.0",
    "mongodb-memory-server": "9.1.3",
    "ts-jest": "29.1.1",
    "typedoc": "0.25.4",
    "typedoc-plugin-markdown": "3.17.1",
    "typescript": "5.3.2"
  },
  "dependencies": {
    "commander": "11.1.0",
    "find-config": "1.0.0",
    "jsonschema": "1.4.1",
    "pluralize": "8.0.0",
    "prettier": "2.8.8",
    "tiny-invariant": "1.3.1",
    "tsx": "4.6.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "yarn run lint:fix"
    ]
  },
  "scripts": {
    "test": "jest",
    "prepare-test": "npx tsx ./src/cli.ts gen --schema e2e/01/schema.ts --output e2e/01/basil-gen.ts --import-source ../../src",
    "build": "tsc",
    "lint": "eslint \"{test,e2e,src}/**/*.ts\"",
    "lint:fix": "eslint \"{test,e2e,src}/**/*.ts\" --fix",
    "prettier": "prettier --write \"{test,e2e,src}/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit --project tsconfig.typecheck.json",
    "clean": "rm -rf build dist",
    "prepare": "husky install",
    "publish-yalc": "npm run clean && npm run build && yalc publish --push --private",
    "gen-typedoc": "npx typedoc src --out docs/api --readme none --basePath . --plugin typedoc-plugin-markdown"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "printWidth": 100
  },
  "peerDependencies": {
    "mongodb": "*"
  }
}
