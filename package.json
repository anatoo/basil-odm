{
  "name": "basil-odm",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "bin": {
    "basil": "bin/cli.js"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "4.1.7",
    "@types/jest": "29.5.0",
    "@types/pluralize": "0.0.29",
    "@typescript-eslint/eslint-plugin": "5.56.0",
    "@typescript-eslint/parser": "5.56.0",
    "esbuild": "0.17.16",
    "esbuild-jest": "0.5.0",
    "eslint": "8.37.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-environment-node": "29.5.0",
    "lint-staged": "13.2.0",
    "merge": "2.1.1",
    "mongodb": "4.14.0",
    "typescript": "5.0.3"
  },
  "dependencies": {
    "commander": "10.0.0",
    "find-config": "1.0.0",
    "glob": "10.0.0",
    "jsonschema": "1.4.1",
    "pluralize": "8.0.0",
    "prettier": "2.8.7",
    "tiny-invariant": "1.3.1"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "yarn run lint:fix"
    ]
  },
  "scripts": {
    "test": "yarn jest",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf build dist",
    "prepare": "husky install",
    "publish": "npm run clean && npm run build && yalc publish --push --private"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "printWidth": 180
  },
  "peerDependencies": {
    "mongodb": "*"
  }
}
