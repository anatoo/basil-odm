{
  "name": "basil-odm",
  "version": "0.0.0",
  "license": "MIT",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "bin": {
    "basil": "bin/cli.js"
  },
  "devDependencies": {
    "@types/jest": "29.5.3",
    "@types/pluralize": "0.0.30",
    "@typescript-eslint/eslint-plugin": "6.3.0",
    "@typescript-eslint/parser": "6.3.0",
    "esbuild": "0.19.0",
    "esbuild-jest": "0.5.0",
    "eslint": "8.46.0",
    "husky": "8.0.3",
    "jest": "29.6.2",
    "lint-staged": "13.2.3",
    "merge": "2.1.1",
    "mongodb": "5.8.1",
    "mongodb-memory-server": "8.14.0",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.15.4",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "commander": "11.0.0",
    "find-config": "1.0.0",
    "jsonschema": "1.4.1",
    "pluralize": "8.0.0",
    "prettier": "2.8.8",
    "tiny-invariant": "1.3.1"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "yarn run lint:fix"
    ]
  },
  "scripts": {
    "test": "yarn jest",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf build dist",
    "prepare": "husky install",
    "publish-yalc": "npm run clean && npm run build && yalc publish --push --private",
    "gen-typedoc": "npx typedoc src --out docs/api --readme none --basePath . --plugin typedoc-plugin-markdown"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "printWidth": 180
  },
  "peerDependencies": {
    "mongodb": "*"
  }
}
